<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="text-center">
        <h2>You've added a new dose!</h2>
        <p>
         <% if @cocktail.photo? %>
         <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
         <% end %>
       </p>
       <p>
        <strong>Name:</strong>
        <%= @cocktail.name %>
      </p>

      <h3>Doses:</h3>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li>
         <%= dose.description %> - <%= dose.ingredient.name %> <%= link_to "Delete", dose_path(dose), method: :delete %>
         <% end %>
       </li>
     </ul>


     <%= link_to 'add ingredient', new_cocktail_dose_path(@cocktail) %>
     <br>
     <%= link_to 'back', cocktails_path %>
   </div>
 </div>
</div>
</div>

